{
    "name": "avisota/contao-subscription-notification-center-bridge",
    "description": "Notification center bridge for the Avisota subscription system.",
    "keywords": [
        "avisota",
        "email",
        "mail",
        "newsletter",
        "marketing"
    ],
    "type": "contao-module",
    "homepage": "http://avisota.org",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Sven Baumann",
            "email": "baumann.sv@gmail.com",
            "homepage": "http://avisota.org",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "info@bit3.de",
        "issues": "https://github.com/avisota/contao-subscription-notification-center-bridge/issues",
        "forum": "https://community.contao.org/de/forumdisplay.php?121-Avisota",
        "wiki": "http://de.contaowiki.org/Kategorie:Avisota",
        "irc": "irc://irc.freenode.org/avisota",
        "source": "https://github.com/avisota/contao-subscription-notification-center-bridge"
    },
    "require": {
        "php": ">=5.3",
        "avisota/contao-subscription": "3.0.x-dev",
        "contao-community-alliance/composer-plugin": "~2.3",
        "contao/core": ">=2.11.11,<3.6",
        "terminal42/notification_center": "~1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "squizlabs/php_codesniffer": "1.*",
        "bit3/php-coding-standard": "~2.2"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-0": {
            "Avisota\\Contao\\SubscriptionNotificationCenterBridge": "src/"
        }
    },
    "extra": {
        "contao": {
            "sources": {
                "module": "system/modules/avisota-subscription-notification-center-bridge"
            },
            "transifex": {
                "project": "avisota-contao",
                "prefix": "contao-subscription-notification-center-bridge-",
                "languages_cto": "module/languages",
                "languages_tx": ".tx"
            }
        },
        "branch-alias": {
            "dev-develop": "3.0.x-dev"
        }
    }
}
